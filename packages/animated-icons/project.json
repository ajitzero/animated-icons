{
	"name": "ng-animated-icons",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "packages/animated-icons/src",
	"prefix": "i",
	"projectType": "library",
	"release": {
		"version": {
			"manifestRootsToUpdate": ["dist/{projectRoot}"],
			"currentVersionResolver": "git-tag",
			"fallbackCurrentVersionResolver": "disk"
		}
	},
	"tags": ["lib"],
	"targets": {
		"build": {
			"executor": "@nx/angular:package",
			"outputs": ["{workspaceRoot}/dist/{projectRoot}"],
			"options": {
				"project": "packages/animated-icons/ng-package.json",
				"tsConfig": "packages/animated-icons/tsconfig.lib.json"
			},
			"configurations": {
				"production": {
					"tsConfig": "packages/animated-icons/tsconfig.lib.prod.json"
				},
				"development": {}
			},
			"defaultConfiguration": "production"
		},
		"nx-release-publish": {
			"options": {
				"packageRoot": "dist/{projectRoot}"
			}
		},
		"lint": {
			"executor": "@nx/eslint:lint"
		}
	}
}
